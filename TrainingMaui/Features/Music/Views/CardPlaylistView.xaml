<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TrainingMaui.Features.Music.Views.CardPlaylistView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    x:Name="this">
    <VerticalStackLayout
        Margin="15,10"
        Spacing="8"
        WidthRequest="235">
        <Grid>
            <telerik:RadBorder CornerRadius="12">
                <Image
                    Aspect="AspectFill"
                    HeightRequest="235"
                    Source="{Binding ImageSource, Source={x:Reference this}}"
                    WidthRequest="235" />
            </telerik:RadBorder>
            <Label
                Margin="10"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Start"
                Shadow="5"
                Text="{Binding Title, Source={x:Reference this}}"
                TextColor="White"
                VerticalOptions="Start" />
        </Grid>

        <Label
            FontAttributes="Bold"
            FontSize="22"
            LineBreakMode="TailTruncation"
            Text="{Binding Title, Source={x:Reference this}}" />

        <Label
            FontSize="15"
            LineBreakMode="TailTruncation"
            Text="{Binding Description, Source={x:Reference this}}"
            TextColor="Black" />
    </VerticalStackLayout>
</ContentView>
