<?xml version="1.0" encoding="utf-8" ?>
<app:BasePage
    x:Class="TrainingMaui.Features.Music.Pages.Home"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:TrainingMaui.CoreMVVM.MVVM;assembly=TrainingMaui.CoreMVVM"
    xmlns:local="clr-namespace:TrainingMaui.Features.Music.ViewModels"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:telerikFont="clr-namespace:TrainingMaui.UI.Fonts.TelerikFont;assembly=TrainingMaui.UI"
    Title="Home">
    <app:BasePage.Resources>
        <FontImageSource
            x:Key="HomeIcon"
            FontFamily="{x:Static telerikFont:TelerikFontAliases.TelerikFontExamples}"
            Glyph="&#xe85b;"
            Size="16" />

    </app:BasePage.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
        </Grid>

        <Grid>
            <telerik:RadNavigationView
                x:Name="navigationView"
                Grid.Row="2"
                DisplayMemberPath="Text"
                HeaderStyle="{StaticResource NavigationHeaderStyle}"
                HeaderText="Discover"
                ImageSourcePath="UrlIcon"
                ItemsSource="{Binding NavigationItems}" />
        </Grid>
        <Image Grid.Column="1" />
    </Grid>
</app:BasePage>