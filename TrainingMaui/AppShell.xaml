<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrainingMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:features="clr-namespace:TrainingMaui.Features.Music.Pages"
    xmlns:local="clr-namespace:TrainingMaui"
    Title="TrainingMaui"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate features:Home}"
        Route="MainPage" />
    
    <ShellContent
        Title="Chat"
        ContentTemplate="{DataTemplate features:Chat}"
        Route="Chat" />
    <ShellContent
        Title="ListPage"
        ContentTemplate="{DataTemplate features:ListPage}"
        Route="ListPage" />


</Shell>
