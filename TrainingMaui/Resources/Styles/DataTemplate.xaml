<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="TrainingMaui.Resources.Styles.DataTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:ui="clr-namespace:TrainingMaui.UI;assembly=TrainingMaui.UI">
    <DataTemplate x:Key="MySelfChat">
        <telerik:RadBorder
            BackgroundColor="{x:Static ui:AppColors.Gray88}"
            CornerRadius="16,16,4,16"
            HorizontalOptions="Start">
            <Label
                Padding="12"
                Text="{Binding Message}"
                TextColor="Black" />
        </telerik:RadBorder>
    </DataTemplate>

    <DataTemplate x:Key="YouChat">
        <telerik:RadBorder
            BackgroundColor="{x:Static ui:AppColors.Gray88}"
            CornerRadius="16,16,4,16"
            HorizontalOptions="Start">
            <Label
                Padding="12"
                Text="{Binding Message}"
                TextColor="Black" />
        </telerik:RadBorder>
    </DataTemplate>

    <DataTemplate x:Key="TimeChat">
        <Label HorizontalOptions="Start" Text="{Binding Message}" />
    </DataTemplate>
</ResourceDictionary>